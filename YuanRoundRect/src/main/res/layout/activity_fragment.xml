<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuanroundrect.FragmentActivity">
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_alignParentTop="true"
        android:paddingVertical="15px"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6067c68"
        android:baselineAligned="true">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image"
            android:layout_width="90px"
            android:layout_height="75px"

            android:src="@drawable/btn_return" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20px"
            android:text="工程量清册"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:id="@+id/salary_standard"

                        android:textSize="15sp"
                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:text="清工薪资标准"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"
                        />

                    <TextView
                        android:id="@+id/list_projects"
                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"

                        android:text="工程量清册"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/list_yi"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"
                        android:textSize="15sp"

                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:text="乙供材料清册"
                        />
                    <TextView
                        android:id="@+id/complete_text"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"
                        android:textSize="15sp"

                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:text="完成"
                        />
                    <TextView
                        android:id="@+id/upload_text"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"
                        android:textSize="15sp"

                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:text="上传"
                        />
                    <TextView
                        android:id="@+id/download_text"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/textview_background_selector"
                        android:clickable="true"
                        android:textSize="15sp"
                        android:layout_width="380px"
                        android:layout_height="100px"
                        android:text="下载"
                        />

                </LinearLayout>
            </HorizontalScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_main">
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
